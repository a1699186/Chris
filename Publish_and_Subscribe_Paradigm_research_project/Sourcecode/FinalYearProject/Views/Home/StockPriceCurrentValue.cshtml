@model IEnumerable<FinalYearProject.Models.Topic.StockPrice>
@{
    ViewBag.Title = "SubscriberPage";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StockPriceCurrentValue</title>
</head>
<body style="text-align:center">
    <div class="row">

        <div class="col-md-1"></div>

            <div class="col-md-4">
                <h2 style="text-align:left">Stock Price Value</h2>
                <p>
                    <table border="1">

                        <tr>
                            <th>Stock Name</th>
                            <th>Current Value</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.price)
                                </td>
                            </tr>
                        }
                    </table>
            </div>

            <br /><br /><br />
            <div class="col-md-5">
                @Html.Partial("subscribeChooseExpression", new FinalYearProject.Models.Expression.StockPriceExpression())
            </div>

        </div>


</body>
</html>
